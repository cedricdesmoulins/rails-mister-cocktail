<%= render "shared/banner" %>
<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-4">
        <div class="cocktailcard" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0.5) 50%), url(<%= image_path 'mojito-vrai.jpg'%>)">
          <h2> <%= cocktail.name %> </h2>
          <%= link_to "more about this cocktail", cocktail_path(cocktail) %>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
</div>
